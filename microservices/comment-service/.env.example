# Comment Service Configuration

# Server
NODE_ENV=development
PORT=3004

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/comment_db?schema=public

# Redis (for SSE Pub/Sub)
# Option 1: Use full URL (recommended for Docker)
REDIS_URL=redis://redis:6379

# Option 2: Or use separate host/port (for local dev)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# RabbitMQ (for events)
RABBITMQ_URL=amqp://admin:admin@localhost:5673

# Auth Service (for internal calls)
AUTH_SERVICE_URL=http://localhost:3001

# Post Service (for internal calls)
POST_SERVICE_URL=http://localhost:3002

# Service-to-Service Authentication
SERVICE_SECRET=your_service_secret_key_change_in_production

# Client
CLIENT_URL=http://localhost:3000
